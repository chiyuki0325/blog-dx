@require('./const.styl')

// 通用主题色
//$color-theme = convert(hexo-config('style.color.common.theme'))
$color-accent = #ff5722
$color-button = #0078d4
$color-hover = #0078d4
$fake-mica = #f3f3f3 radial-gradient(#eff4f9 75%, #f3f3f3 100%) no-repeat fixed

// 浅色
$light-background = #f3f3f3 radial-gradient(#eff4f9 75%, #f3f3f3 100%) no-repeat fixed
$light-mix = #eff4f9
$light-border = #e1e1e3
$light-color-theme = #0078d4
$light-block = #EEF0F2
$light-card = #fafbfd
$light-title = #000
$light-text = #1a1a1a
$light-code = #000

// 深色
$dark-background = #202020 radial-gradient(#1a1f35 25%, #202020 100%) no-repeat fixed
$dark-border = hsla(0deg,0%,100%,.1)
$dark-color-theme = #4cc2ff
$dark-mix = #313438
$dark-block = #2B2F33
$dark-card = #282a39
$dark-title = #fff
$dark-text = #eee
$dark-code = #eee

// 移动端深色背景（OLED调成纯黑可以省电）
$dark-background-mobile = #000

// 字体
@import("https://s1.hdslb.com/bfs/static/jinkela/long/font/regular.css")

$ff-body = HarmonyOS_Regular, system-ui, -apple-system, sans-serif
$ff-code = Menlo, Monaco, Consolas, system-ui, "Courier New", monospace, sans-serif
$ff-codeblock = Menlo, Monaco, Consolas, system-ui, "Courier New", monospace, sans-serif
$ff-logo = HarmonyOS_Regular, system-ui, -apple-system, sans-serif


// font size
$fs-root = 16px
$fs-15 = .9375rem
$fs-14 = .875rem
$fs-13 = .8125rem
$fs-12 = .75rem

$fs-h1   = 1.75rem   // 32px
$fs-h2   = 1.5rem // 24px
$fs-h3   = 1.375rem  // 22px
$fs-h4   = 1.125rem  // 18px
$fs-h5   = $fs-15
$fs-h6   = $fs-12
$fs-p    = .9375rem
$fs-code = 85%
$fs-codeblock = 0.8125rem

$border-card = 8px
$border-block = 8px
$border-image = 6px

// 可以动态变化的属性
:root
  --width-left: 288px
  --width-main: 720px
  --gap-l: 16px
  --gap-p: .75rem // gap for paragraph
  // desktop 2k or larger
  @media screen and (min-width: $device-2k)
    --gap-l: 32px
    --width-left: 352px
    --width-main: 780px
  // desktop 4k or larger
  @media screen and (min-width: $device-4k)
    --width-main: 860px
    --gap-l: 64px
  // iPad 竖屏
  @media screen and (max-width: $device-tablet)
    --width-left: 252px
  // iPad 竖屏
  @media screen and (max-width: $device-mobile-max)
    --width-left: 288px



// shadow
$boxshadow-card = 0 1px 2px hsla(240, 3.8%, 46.1%, 10%)
$boxshadow-card-hover = 0 2px 8px hsla(240, 3.8%, 46.1%, 12%)
$boxshadow-float = 0 4px 8px 0px rgba(0, 0, 0, 0.1)
$boxshadow-card-float = 0 2px 4px 0px rgba(0, 0, 0, 0.1), 0 4px 8px 0px rgba(0, 0, 0, 0.1), 0 8px 16px 0px rgba(0, 0, 0, 0.1)
$boxshadow-button = 0 0 2px 0px rgba(0, 0, 0, 0.04), 0 0 8px 0px rgba(0, 0, 0, 0.04)
$boxshadow-block = 0 1px 4px 0px rgba(0, 0, 0, 0.02), 0 2px 8px 0px rgba(0, 0, 0, 0.02)
